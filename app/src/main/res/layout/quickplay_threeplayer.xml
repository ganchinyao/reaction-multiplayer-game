<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quickplay_threeplayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.react.reactmultiplayergame.QuickPlayThreePlayer"
    android:orientation="vertical"
    android:background="@drawable/gamemode_background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.react.reactmultiplayergame.helper.AutoResizeTextView
            android:id="@+id/threeplayer_player2Question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_15ssp"
            android:layout_alignParentBottom="true"
            android:rotation="180"
            tools:text="Are there more black than white?"
            android:textColor="#FFFFFF"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_2sdp"
            android:background="#32000000"
            android:maxLines="1"/>

        <View
            android:id="@+id/threeplayer_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"></View>
        <RelativeLayout
            android:id="@+id/threeplayer_player2Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/threeplayer_view"
            android:layout_above="@id/threeplayer_player2Question"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:background="@drawable/button_design">

            <android.support.percent.PercentRelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_1sdp"
                >

                <ImageView
                    app:layout_heightPercent="20%"
                    app:layout_aspectRatio="100%"
                    android:src="@drawable/playerscore_flower"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    app:layout_marginLeftPercent="1%"
                    />

                <com.react.reactmultiplayergame.helper.AutoResizeTextView
                    android:id="@+id/threeplayer_player2Score"
                    android:text="0"
                    android:textSize="@dimen/_12ssp"
                    app:layout_aspectRatio="100%"
                    app:layout_heightPercent="20%"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    app:layout_marginLeftPercent="1%"
                    android:rotation="180"
                    android:paddingTop="@dimen/_1sdp"
                    />

                <ImageView
                    android:id="@+id/threeplayer_player2Glow"
                    app:layout_widthPercent= "90%"
                    app:layout_heightPercent= "70%"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:rotation="180"/>

                <TextView
                    android:id="@+id/threeplayer_player2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    tools:text="@string/player2"
                    android:textSize="@dimen/_12ssp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/threeplayer_player2Score"
                    android:rotation="180"
                    android:textColor="#FFFFFF" />
            </android.support.percent.PercentRelativeLayout>

            <TextView
                android:id="@+id/threeplayer_player2Comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Are you even trying?"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:rotation="180"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/threeplayer_player3Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/threeplayer_view"
            android:layout_above="@id/threeplayer_player2Question"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:background="@drawable/button_design">


            <android.support.percent.PercentRelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_1sdp"
                >

                <ImageView
                    app:layout_heightPercent="20%"
                    app:layout_aspectRatio="100%"
                    android:src="@drawable/playerscore_flower"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    app:layout_marginLeftPercent="1%"
                    />

                <com.react.reactmultiplayergame.helper.AutoResizeTextView
                    android:id="@+id/threeplayer_player3Score"
                    android:text="0"
                    android:textSize="@dimen/_12ssp"
                    app:layout_aspectRatio="100%"
                    app:layout_heightPercent="20%"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    app:layout_marginLeftPercent="1%"
                    android:rotation="180"
                    android:paddingTop="@dimen/_1sdp"
                    />

                <ImageView
                    android:id="@+id/threeplayer_player3Glow"
                    app:layout_widthPercent= "90%"
                    app:layout_heightPercent= "70%"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:rotation="180"/>

                <TextView
                    android:id="@+id/threeplayer_player3Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    tools:text="@string/player3"
                    android:textSize="@dimen/_12ssp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/threeplayer_player3Score"
                    android:rotation="180"
                    android:textColor="#FFFFFF" />
            </android.support.percent.PercentRelativeLayout>

            <TextView
                android:id="@+id/threeplayer_player3Comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Are you even trying?"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:rotation="180"
                android:textColor="#FFFFFF"/>
            <!--Use for TouchingSpam.java gameMode-->
            <TextView
                android:id="@+id/threeplayer_p3touchingspam_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="7"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:textSize="22sp"
                android:textColor="@color/touchingspamcounter"
                android:textStyle="italic"
                android:visibility="gone"
                android:rotation="180"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">
        <RelativeLayout
            android:id="@+id/threeplayer_gamecontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gamemode_gamcontent_background"></RelativeLayout>

        <RelativeLayout
            android:id="@+id/threeplayer_timerbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:background="@drawable/timerbar"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:visibility="gone"
            ></RelativeLayout>

        <RelativeLayout
            android:id="@+id/threeplayer_gameContentWhiteStroke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.react.reactmultiplayergame.helper.AutoResizeTextView
            android:id="@+id/threeplayer_player1Question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_15ssp"
            tools:text="Are there more black than white?"
            android:textColor="#FFFFFF"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_2sdp"
            android:background="#32000000"
            android:maxLines="1"/>

        <RelativeLayout
            android:id="@+id/threeplayer_player1Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/threeplayer_player1Question"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:background="@drawable/button_design">

            <android.support.percent.PercentRelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                >

                <ImageView
                    app:layout_heightPercent="23%"
                    app:layout_aspectRatio="100%"
                    android:src="@drawable/playerscore_flower"
                    android:layout_alignParentRight="true"
                    app:layout_marginRightPercent="1%"
                    />

                <com.react.reactmultiplayergame.helper.AutoResizeTextView
                    android:id="@+id/threeplayer_player1Score"
                    android:text="0"
                    android:textSize="@dimen/_14ssp"
                    app:layout_aspectRatio="100%"
                    app:layout_heightPercent="23%"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_alignParentRight="true"
                    app:layout_marginRightPercent="1%"
                    android:paddingTop="@dimen/_2sdp"
                    />

                <ImageView
                    android:id="@+id/threeplayer_player1Glow"
                    app:layout_widthPercent= "50%"
                    app:layout_heightPercent= "80%"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/threeplayer_player1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    tools:text="@string/player1"
                    android:layout_toLeftOf="@id/threeplayer_player1Score"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="#FFFFFF" />

            </android.support.percent.PercentRelativeLayout>

            <TextView
                android:id="@+id/threeplayer_player1Comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Are you even trying?"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/_16ssp"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
